<div class="notice">
<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% else %>
	<p><%= flash[:error] %></p>
<% end %>
</div>







<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to 'Show', book_path(book.id) %></td>
			<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
			<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
</table>





<h3>New book</h3>

<%= form_for(@book) do |f| %>

<% if @book_post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
 	 <ul>
 		<% @book_post.errors.full_messages.each do |message| %>
 			<li><%= message %></li>
 		<% end %>
 	 </ul>
  </div>
<% end %>


	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_field :body %><br>

	<%= f.submit 'Create Book' %>

<% end %>

